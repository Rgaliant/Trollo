<h1>lists#index</h1>
<p>What would you like to do?</p>
 <div class="ui cards">
<%= @board.lists.each do |list| %>
<div class="ui centered card">
        <div class="content">
          <div class="header">
            <%= link_to list.title, list_path(list) %> 
          </div>
          <div class="meta">
            <%= list.created_at %>
          </div>
          <div class="description">
            <% list.cards.each do |card| %>
            <div class="ui segment">
            <%= card.title %>
            <%= link_to [@list, card], method: :delete do %>
              <i class="ui trash icon"></i>
            <% end %>
            </div>
            <% end %>
            <div class="ui segment">
              <%= link_to '+ Add a Card', new_list_card_path(list, @card) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div